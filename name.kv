<NamesScreen>:

    BoxLayout:
        orientation: 'vertical'
        padding: [10, 50, 10, 10]  
        spacing: 10

        ScrollView:
            size_hint: (1, 1)
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height 

                Label:
                    id: file_list_label
                    font_size: 32
                    size_hint_y: None
                    height: self.texture_size[1]  
                    width: self.texture_size[0] 



        Button:
            text: 'Go to Home'
            spacing: 10
            size_hint_y: None
            height: 70 
            on_press: 
                root.manager.transition.direction='right'
                root.manager.current = 'main_screen'
