<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        TextInput:
            id: customer_name
            text: 'Dylan Cook'
            hint_text: 'Enter Customers Name'
            size_hint_y: None
            height: 40 
            padding_x: 10  
            padding_y: 5 
            multiline: False 
            
        
        GridLayout:
            cols: 4
            rows: 4
            spacing: 5
            padding: 5
            
            CheckBox:
                id: underground_wire
            Label:
                text: 'Underground Wire'
                font_size: 20
                
            CheckBox:
                id: tower_disconnect_switch
            Label:
                text: 'Tower Disconnect Switch'
                font_size: 20
                
            CheckBox:
                id: tower_wire
            Label:
                text: 'Tower Wire'
                font_size: 20
                
            CheckBox:
                id: junction_box
            Label:
                text: 'Junction Box'
                font_size: 20
                
            CheckBox:
                id: slip_rings
            Label:
                text: 'Slip Rings'
                font_size: 20
                
            CheckBox:
                id: brush_block
            Label:
                text: 'Brush Block'
                font_size: 20
                
            CheckBox:
                id: altenator
            Label:
                text: 'Altenator'
                font_size: 20
                
            # CheckBox:
            #     id: checkbox_8
            # Label:
            #     text: 'Option 8'
        

        TextInput:
            text: '100'
            id: phase_1
            hint_text: 'Enter Phase 1'
            size_hint_y: None
            height: 40 
            padding_x: 10  
            padding_y: 5 
            multiline: False 
            input_filter: 'int'
        
        TextInput:
            text: '400'
            id: phase_2
            hint_text: 'Enter Phase 2'
            size_hint_y: None
            height: 40 
            padding_x: 10  
            padding_y: 5 
            multiline: False 
            input_filter: 'int'
        
        TextInput:
            text: '550'
            id: phase_3
            hint_text: 'Enter Phase 3'
            size_hint_y: None
            height: 40 
            padding_x: 10  
            padding_y: 5 
            multiline: False 
            input_filter: 'int'
        

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50 
            
            Button:
                text: 'Enter'
                on_press: 
                    root.process_input()

            Button:
                text: 'Clear'
                on_press:
                    root.clear_inputs()

        Label: 
            id: megger_test_id
            font_size: 32
            text: ''

        Button:
            spacing: 10
            size_hint_y: None
            height: 70 
            text: 'Check Previous Customer Names'
            on_press:
                app.show_excel_files()
                root.manager.transition.direction='left'
                root.manager.current = 'name_screen'